<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0D6D9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo do DoseAlertaApp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite seu email:"
            android:textSize="19sp"
            android:textColor="#000"
            android:labelFor="@id/txtemail" />

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textEmailAddress"
            android:hint="Digite seu email"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/senhaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite sua senha:"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:labelFor="@id/txtsenha" />

        <EditText
            android:id="@+id/txtsenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textPassword"
            android:hint="Digite sua senha"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTRAR"
            android:background="#242C61"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/registraLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não é cadastrado? Clique Aqui."
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
